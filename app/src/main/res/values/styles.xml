<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/all_pink</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="WhiteDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_white_round_shape</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--Tablayout样式-->
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--个人中心按钮格式-->
    <style name="persinal_button_style">
        <item name="android:layout_width">@dimen/size_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/size_5dp</item>
        <item name="android:background">@drawable/item_product_list_sl</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--无网络提示的TextView-->
    <style name="text_no_net">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">没有连接到网络</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
