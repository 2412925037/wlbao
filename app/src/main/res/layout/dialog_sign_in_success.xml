<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/size_250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingTop="@dimen/size_80dp">

        <TextView
            android:id="@+id/tv_sign_in_success_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_20dp"
            android:visibility="gone"
            android:gravity="center"
            android:text="已成功签到3天！"
            android:textSize="@dimen/super_large_textsize" />

        <TextView
            android:id="@+id/tv_sign_in_success_scores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_30dp"
            android:gravity="center_horizontal"
            android:text="恭喜你，获得30积分"
            android:textColor="@color/red_text"
            android:textSize="@dimen/super_large_textsize" />

        <TextView
            android:id="@+id/tv_sign_in_success_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_20dp"
            android:background="@mipmap/qiandao_red_bg"
            android:gravity="center"
            android:padding="@dimen/size_5dp"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/super_large_textsize" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/sign_in_success_top"
        android:gravity="center"
        android:text="签到成功"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/super_large_textsize"
        android:textStyle="bold" />
</FrameLayout>