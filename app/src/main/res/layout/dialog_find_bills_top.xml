<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/grey_bg_top"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_find_bills_top"
            android:layout_width="@dimen/size_0dp"
            app:tabIndicatorHeight="@dimen/size_0dp"
            app:tabTextColor="@color/all_text_color"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_find_bills_top"
            android:padding="@dimen/size_10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/arrow_blue_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <GridView
        android:id="@+id/gv_find_bills_top"
        android:padding="@dimen/size_10dp"
        android:numColumns="4"
        android:verticalSpacing="@dimen/size_10dp"
        android:horizontalSpacing="@dimen/size_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>