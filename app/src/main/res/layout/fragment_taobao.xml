<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/web_taobao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="点击打开阿里触屏版"
        android:gravity="center"
        android:padding="16dp"
        />

    <LinearLayout
        android:id="@+id/ll_load_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/load_fail"
            android:textColor="@color/all_text_color"
            android:textSize="18sp"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider_height"
            android:layout_margin="@dimen/size_10dp"
            android:background="@color/classify_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reason_one"
            android:textColor="@color/classify_gray"
            android:textSize="14sp"></TextView>

    </LinearLayout>

</RelativeLayout>