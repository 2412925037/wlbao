<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            android:id="@+id/groupon_header_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:indicator_drawable_selected="@color/all_immerse"
            app:indicator_drawable_unselected="@color/fuzhu_yellow"></com.youth.banner.Banner>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_180dp"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp">

        <GridView
            android:id="@+id/grid_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:numColumns="5"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/size_10dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10dp"
        android:background="@color/app_bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/icon_tuijian"
            android:drawablePadding="@dimen/size_5dp"
            android:text="商品推荐"
            android:textColor="@color/all_pink"
            android:textSize="15sp" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/order_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:scrollbars="horizontal"
        app:tabGravity="center"
        app:tabIndicatorColor="#ff4323"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#ff4323"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="#333333" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

</LinearLayout>