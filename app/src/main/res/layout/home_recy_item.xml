<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:id="@+id/ll_goods_item"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/size_10dp">

    <RelativeLayout
        android:layout_width="116dp"
        android:layout_height="116dp">

        <com.renhuikeji.wanlb.wanlibao.views.LabelImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:backgroundColor="@color/jiaobiao_green"
            app:direction="leftTop"
            app:labelBottomPadding="4dp"
            app:labelTopPadding="7dp"
            app:textContentSize="9sp"
            app:textContent="推荐"
            app:textTitleColor="#ffffff" />

        <TextView
            android:id="@+id/text_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/jiaobiao_bg"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="领券省\n\r5元"
            android:textColor="#ffffff"
            android:textSize="9sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goodIntroduce"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="速度快高考的感觉大圣归来公开  大概  都快高考  看看"
            android:textColor="@color/classify_gray"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_nowprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="$39.00"
                android:textColor="@color/fuzhu_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_toRightOf="@+id/tv_nowprice"
                android:gravity="center_vertical"
                android:text="$39.00"
                android:textColor="@color/grey_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="$39.00"
                android:textColor="@color/grey_text"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="@dimen/size_2dp"
            android:paddingTop="@dimen/size_2dp">

            <TextView
                android:id="@+id/tv_haveshape"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_5dp"
                android:background="@drawable/fan_bg"
                android:gravity="center"
                android:text="返"
                android:textColor="@color/fuzhu_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fanmiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_haveshape"
                android:text="39"
                android:textColor="@color/fuzhu_red"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_lingquan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_haveshape"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_lingquan"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/lingquan_bg"
                    android:gravity="center"
                    android:text="领券"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_quanNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/quan_num_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_5dp"
                    android:paddingRight="@dimen/size_5dp"
                    android:text="领券"
                    android:textColor="@color/fuzhu_red"
                    android:textSize="12sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_lijifan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="收货后立返"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/size_2dp"
            android:paddingTop="@dimen/size_2dp">

            <TextView
                android:id="@+id/tv_fanbi"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/size_5dp"
                android:background="@drawable/fan_bg"
                android:gravity="center"
                android:text="返比"
                android:textColor="@color/fuzhu_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fanbili"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_fanbi"
                android:gravity="center_vertical"
                android:text="5%"
                android:textColor="@color/fuzhu_red"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_quTianMao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_fanbi"
                android:drawableLeft="@mipmap/icon_tianmao"
                android:gravity="center"
                android:text=" 去天猫"
                android:textColor="@color/grey_text"
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_xiaoliang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="销量1230"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shopName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="有效期"
                android:textColor="@color/grey_text"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>