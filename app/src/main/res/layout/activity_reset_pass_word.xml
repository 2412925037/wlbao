<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.renhuikeji.wanlb.wanlibao.activity.ResetPassWordActivity">

    <include layout="@layout/comman_white_topbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_gray" />

    <EditText
        android:id="@+id/edit_passwore_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_43dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@drawable/red_slide_round_selector"
        android:cursorVisible="false"
        android:gravity="left|center_vertical"
        android:hint="新密码(6--20位)"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingLeft="@dimen/size_10dp"
        android:textColor="@color/all_text_color"
        android:textColorHint="@color/line_gray"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_passwore_new_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_43dp"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/red_slide_round_selector"
        android:gravity="left|center_vertical"
        android:hint="确认新密码(6--20位)"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingLeft="@dimen/size_10dp"
        android:textColor="@color/all_text_color"
        android:textColorHint="@color/line_gray"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_43dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:background="@drawable/red_slide_round_selector"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp">

        <TextView
            android:id="@+id/phonenumber_tv"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="@color/all_text_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_getphone_number"
            android:layout_width="@dimen/size_164dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_toRightOf="@+id/phonenumber_tv"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/all_text_color"
            android:textColorHint="@color/line_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="90dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/red_slide_round_selector"
            android:clickable="false"
            android:focusable="true"
            android:gravity="center"
            android:onClick="true"
            android:text="获取验证码"
            android:textColor="@color/all_pink"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_43dp"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/red_slide_round_selector"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp">

        <TextView
            android:id="@+id/yzm_name_tv"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="@color/all_text_color"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_get_yzm"
            android:layout_width="@dimen/size_200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/all_text_color"
            android:textColorHint="@color/line_gray"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/alter_passwore_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_43dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@color/all_pink"
        android:clickable="false"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />
</LinearLayout>
