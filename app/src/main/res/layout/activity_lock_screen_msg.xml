<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_lock_screen_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextClock
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:id="@+id/clock"
        android:textSize="64sp"
        />

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clock"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/bg_title_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lock_title_tv"
                android:drawablePadding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="万利宝"
                android:textColor="@color/btn_blue_normal"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/wanlibao"/>
            <TextView
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/lock_time_tv"/>
        </LinearLayout>
        <TextView
            android:background="@drawable/bg_msg_lock"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lock_msg_tv"
            android:textColor="@color/fuzhu_black"
           />
    </LinearLayout>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/arrow_right_black"
        android:layout_alignParentBottom="true"
        android:text="点击关闭"
        android:gravity="center"
        android:padding="32dp"
        android:textSize="24sp"
        android:id="@+id/unlock"
        />
</RelativeLayout>
