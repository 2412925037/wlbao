<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_6dp"
    android:layout_marginLeft="@dimen/size_3dp"
    android:layout_marginRight="@dimen/size_3dp"
    android:id="@+id/classfy_ll"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_third_cat_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_third_cat_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/size_2dp"
        android:text="连衣裙"
        android:textColor="@color/fuzhu_black" />
</LinearLayout>