<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/size_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorWhite">


    <LinearLayout
        android:id="@+id/friend_num_ll"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:padding="@dimen/size_4dp"
            android:text="@string/teststr"
            android:layout_weight="1"
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friend_num_tv"/>
        <TextView
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/colorGray"
            android:padding="@dimen/size_4dp"
            android:text="@string/teststr"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friend_order_tv"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/friend_nick_ll"
        android:layout_toRightOf="@+id/friend_img"

        >
        <TextView
            android:padding="@dimen/size_4dp"
            android:text="@string/teststr"
            android:layout_weight="1"
            android:textColor="@color/fuzhu_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friend_name_tv"/>
        <TextView
            android:padding="@dimen/size_4dp"
            android:text="@string/teststr"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/colorGray"
            android:id="@+id/friend_id_tv"/>
    </LinearLayout>
    <com.renhuikeji.wanlb.wanlibao.views.CircleImageView
        android:id="@+id/friend_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@mipmap/icon_yh"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>